<project name="Project 2" default="runSTL">
    <target name="clean">
        <delete dir="build"/>
        <delete dir="dist" />
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes" includeantruntime="false"/>
    </target>

    <target name="jar">
        <mkdir dir="dist"/>
        <jar destfile="dist/primSTL.jar" basedir="build/classes" >
            <manifest>
                <attribute name="Main-Class" value="PrimSTL"/>
            </manifest>
        </jar>
    </target>

    <target name="runSTL" depends="clean, compile">
        <java classname="PrimSTL" classpath="build/classes" fork="true"/>
        <!--<java jar="dist/primSTL.jar" fork="true"/>-->
    </target>
    <target name="runDS" depends="clean, compile">
        <java classname="PrimDS" classpath="build/classes" />
        <!--<java jar="dist/primSTL.jar" fork="true"/>-->
    </target>
</project>
