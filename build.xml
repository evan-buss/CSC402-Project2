<project name="Project 2" default="runSTL">
    <target name="clean">
        <delete dir="build"/>
        <delete dir="dist" />
    </target>

    <!--Compile all java files. Output to build/classes directory-->
    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes" includeantruntime="false"/>
    </target>

    <target name="runSTL" depends="clean, compile">
        <java classname="PrimSTL"
              classpath="build/classes"
              fork="true">
            <arg value="inputs/5.txt"/>
        </java>
    </target>
    <target name="runDS" depends="clean, compile">
        <java classname="PrimDS" classpath="build/classes" />
    </target>
</project>
